{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"resolveJsonModule": true,
		"declaration": true,
		"declarationDir": "./types",
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
